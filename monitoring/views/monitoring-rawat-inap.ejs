  <script>
    // ========================================
    // GLOBAL STATE
    // ========================================
    let audioContext = null;
    let alertAudioBuffer = null;
    let audioSource = null;
    let isAudioPlaying = false;
    let audioUnlocked = false;

    const displayedAlerts = new Map();
    let chartInstances = new Map();
    const vitalsHistory = new Map();

    // ========================================
    // SOCKET.IO CONNECTION
    // ========================================
    const socket = io({
      reconnection: true,
      reconnectionDelay: 2000,
      reconnectionAttempts: 10,
      timeout: 10000
    });

    socket.on('connect', () => {
      console.log('‚úì Socket.IO connected:', socket.id);
      loadPatientData();
    });

    socket.on('fall-alert', (alert) => {
      console.log('üö® FALL ALERT:', alert);
      handleFallAlert(alert);
      updatePatientCard(alert.emr_no);
    });

    socket.on('disconnect', () => {
      console.warn('‚ö†Ô∏è Socket disconnected');
    });

    // ========================================
    // AUDIO FUNCTIONS
    // ========================================
    const generateAlertSound = () => {
      const ctx = new (window.AudioContext || window.webkitAudioContext)();
      const duration = 0.5;
      const buffer = ctx.createBuffer(1, duration * ctx.sampleRate, ctx.sampleRate);
      const data = buffer.getChannelData(0);
      
      for (let i = 0; i < buffer.length; i++) {
        const t = i / ctx.sampleRate;
        const freq = Math.sin(t * 8) * 200 + 800;
        data[i] = Math.sin(2 * Math.PI * freq * t) * 0.3;
      }
      return buffer;
    };

    const initAudio = () => {
      try {
        audioContext = new (window.AudioContext || window.webkitAudioContext)();
        alertAudioBuffer = generateAlertSound();
      } catch (err) {
        console.error('‚ùå Audio init failed:', err);
      }
    };

    const playSound = () => {
      if (!audioContext || !alertAudioBuffer || isAudioPlaying) return;
      try {
        if (audioContext.state === 'suspended') audioContext.resume();
        audioSource = audioContext.createBufferSource();
        audioSource.buffer = alertAudioBuffer;
        audioSource.loop = true;
        audioSource.connect(audioContext.destination);
        audioSource.start(0);
        isAudioPlaying = true;
      } catch (err) {
        console.error('‚ùå Play error:', err);
      }
    };

    const stopSound = () => {
      if (audioSource) {
        try {
          audioSource.stop();
          audioSource.disconnect();
        } catch (err) {
          console.warn('Audio stop error:', err);
        }
        audioSource = null;
      }
      isAudioPlaying = false;
    };

    // ========================================
    // FALL ALERT HANDLER
    // ========================================
    function handleFallAlert(alert) {
      if (!alert || !alert.nama_pasien) return;

      const alertKey = `fall-${alert.id}`;
      if (displayedAlerts.has(alertKey)) return;

      displayedAlerts.set(alertKey, Date.now());
      playSound();
      showFallAlert(alert);

      if (Notification.permission === 'granted') {
        new Notification('üö® FALL DETECTED!', {
          body: `${alert.nama_pasien} - Room ${alert.room_id}`,
          tag: alertKey,
          requireInteraction: true,
          vibrate: [200, 100, 200]
        });
      }

      setTimeout(() => closeFallAlert(alert.id), 120000);
    }

    function showFallAlert(alert) {
      const container = document.getElementById('fall-alert-container');
      if (!container || document.getElementById(`fall-alert-${alert.id}`)) return;

      const waktu = new Date(alert.waktu).toLocaleTimeString('id-ID');
      const alertDiv = document.createElement('div');
      alertDiv.className = 'fall-alert';
      alertDiv.id = `fall-alert-${alert.id}`;
      alertDiv.innerHTML = `
        <div class="fall-alert-header">
          <div class="fall-alert-icon">‚ö†Ô∏è</div>
          <h3 class="fall-alert-title">FALL DETECTED!</h3>
        </div>
        <div class="fall-alert-body">
          <div class="alert-info-row">
            <span class="alert-label">üë§ Pasien:</span>
            <span class="alert-value">${alert.nama_pasien}</span>
          </div>
          <div class="alert-info-row">
            <span class="alert-label">üè• Ruangan:</span>
            <span class="alert-value">${alert.room_id}</span>
          </div>
          <div class="alert-info-row">
            <span class="alert-label">üíì HR:</span>
            <span class="alert-value">${alert.heart_rate || 'N/A'} bpm</span>
          </div>
          <div class="alert-info-row">
            <span class="alert-label">üïê Waktu:</span>
            <span class="alert-value">${waktu}</span>
          </div>
        </div>
        <div class="fall-alert-footer">
          <button class="fall-btn btn-acknowledge" onclick="acknowledgeFallAlert(${alert.id})">
            ‚úì Acknowledge
          </button>
          <button class="fall-btn btn-close" onclick="closeFallAlert(${alert.id})">
            ‚úï Close
          </button>
        </div>
      `;
      container.insertBefore(alertDiv, container.firstChild);
    }

    function closeFallAlert(alertId) {
      const alertDiv = document.getElementById(`fall-alert-${alertId}`);
      if (!alertDiv) return;
      alertDiv.classList.add('closing');
      setTimeout(() => {
        alertDiv.remove();
        if (document.querySelectorAll('.fall-alert').length === 0) {
          stopSound();
        }
      }, 300);
    }

    function acknowledgeFallAlert(alertId) {
      const perawat = '<%= nama_perawat %>';
      fetch(`/api/fall-detection/${alertId}/acknowledge`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          acknowledged_by: perawat,
          timestamp: new Date().toISOString()
        })
      }).catch(err => console.error('Acknowledge error:', err));
      closeFallAlert(alertId);
    }

    // ========================================
    // LOAD & DISPLAY PATIENT DATA
    // ========================================
    async function loadPatientData() {
      try {
        const [statsRes, patientsRes] = await Promise.all([
          fetch('/api/rawat-inap/stats'),
          fetch('/api/rawat-inap/patients')
        ]);

        const stats = await statsRes.json();
        const patients = await patientsRes.json();

        if (stats.success) {
          document.getElementById('total-patients').textContent = stats.stats.totalPatients;
          document.getElementById('fall-count').textContent = stats.stats.fallAlerts;
        }

        if (patients.success && patients.patients.length > 0) {
          displayPatients(patients.patients);
        } else {
          const container = document.getElementById('patients-container');
          container.innerHTML = '<div class="empty-state"><i class="fas fa-info-circle"></i><p>Tidak ada pasien rawat inap</p></div>';
        }
      } catch (err) {
        console.error('‚ùå Load error:', err);
      }
    }

    function displayPatients(patients) {
      const container = document.getElementById('patients-container');
      container.innerHTML = patients.map(p => `
        <div class="patient-card ${p.fall_detected ? 'fall-alert' : ''}" id="card-${p.emr_no}">
          <div class="patient-header">
            <div>
              <div class="patient-name">${p.nama}</div>
              <div class="patient-meta">
                <div class="meta-item"><span class="meta-label">EMR:</span> ${p.emr_no}</div>
                <div class="meta-item"><span class="meta-label">Room:</span> ${p.room_id}</div>
                <div class="meta-item"><span class="meta-label">Poli:</span> ${p.poli}</div>
              </div>
            </div>
            ${p.fall_detected ? '<span class="fall-badge">üö® FALL DETECTED</span>' : ''}
          </div>

          <div class="vitals-grid">
            <div class="vital-box ${parseInt(p.heart_rate) > 100 ? 'warning' : ''}">
              <div class="vital-label">üíì Heart Rate</div>
              <div class="vital-value">${p.heart_rate}<span class="vital-unit">bpm</span></div>
              <div class="vital-time">Update: ${formatTime(p.waktu_vital)}</div>
            </div>
            <div class="vital-box ${parseInt(p.respirasi) > 20 ? 'warning' : ''}">
              <div class="vital-label">üå¨Ô∏è Respirasi</div>
              <div class="vital-value">${p.respirasi}<span class="vital-unit">/min</span></div>
              <div class="vital-time">Nafas per menit</div>
            </div>
            <div class="vital-box">
              <div class="vital-label">üìè Jarak Kasur</div>
              <div class="vital-value">${p.jarak_kasur_cm}<span class="vital-unit">cm</span></div>
              <div class="vital-time">Dari lantai</div>
            </div>
            <div class="vital-box">
              <div class="vital-label">üìã ID Kunjungan</div>
              <div class="vital-value">${p.id_kunjungan || '-'}</div>
              <div class="vital-time">Status: ${p.status || 'aktif'}</div>
            </div>
          </div>

          <div class="chart-container">
            <div class="chart-title">üìà Heart Rate History (Realtime)</div>
            <div class="chart-wrapper">
              <canvas id="chart-${p.emr_no}"></canvas>
            </div>
          </div>

          <div class="staff-info">
            <div class="staff-item">
              <span class="staff-label">üë®‚Äç‚öïÔ∏è Perawat</span>
              <span class="staff-value">${p.nama_perawat}</span>
            </div>
            <div class="staff-item">
              <span class="staff-label">üë®‚Äç‚öïÔ∏è Dokter</span>
              <span class="staff-value">${p.nama_dokter}</span>
            </div>
            <div class="staff-item">
              <span class="staff-label">üìÖ Lahir</span>
              <span class="staff-value">${formatDate(p.tanggal_lahir)}</span>
            </div>
            <div class="staff-item">
              <span class="staff-label">üë• Jenis Kelamin</span>
              <span class="staff-value">${p.jenis_kelamin === 'M' ? 'Laki-laki' : 'Perempuan'}</span>
            </div>
          </div>
        </div>
      `).join('');

      // Initialize charts
      patients.forEach(p => {
        initializeChart(p.emr_no);
        vitalsHistory.set(p.emr_no, []);
      });

      // Setup auto-refresh untuk setiap pasien
      setInterval(loadPatientData, 30000);
    }

    function initializeChart(emrNo) {
      const canvasId = `chart-${emrNo}`;
      const canvas = document.getElementById(canvasId);
      if (!canvas) return;

      const ctx = canvas.getContext('2d');
      const chartInstance = new Chart(ctx, {
        type: 'line',
        data: {
          labels: [],
          datasets: [{
            label: 'Heart Rate (bpm)',
            data: [],
            borderColor: '#00B14F',
            backgroundColor: 'rgba(0, 177, 79, 0.1)',
            borderWidth: 3,
            fill: true,
            tension: 0.4,
            pointRadius: 4,
            pointBackgroundColor: '#00B14F',
            pointBorderColor: 'white',
            pointBorderWidth: 2,
            pointHoverRadius: 6
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              display: true,
              labels: {
                font: { size: 12, weight: '600' },
                color: '#666',
                padding: 15
              }
            }
          },
          scales: {
            y: {
              min: 40,
              max: 150,
              ticks: {
                color: '#999',
                font: { size: 12 }
              },
              grid: {
                color: 'rgba(0,0,0,0.05)',
                drawBorder: false
              }
            },
            x: {
              ticks: {
                color: '#999',
                font: { size: 11 }
              },
              grid: {
                display: false
              }
            }
          }
        }
      });

      chartInstances.set(emrNo, chartInstance);
    }

    function updateChart(emrNo, heartRate) {
      const chartInstance = chartInstances.get(emrNo);
      if (!chartInstance) return;

      const now = new Date().toLocaleTimeString('id-ID', { 
        hour: '2-digit', 
        minute: '2-digit'
      });

      const data = chartInstance.data;
      data.labels.push(now);
      data.datasets[0].data.push(heartRate);

      // Keep only last 20 data points
      if (data.labels.length > 20) {
        data.labels.shift();
        data.datasets[0].data.shift();
      }

      chartInstance.update('none');
    }

    function updatePatientCard(emrNo) {
      fetch(`/api/rawat-inap/patients`)
        .then(res => res.json())
        .then(data => {
          if (data.success) {
            const patient = data.patients.find(p => p.emr_no == emrNo);
            if (patient) {
              const card = document.getElementById(`card-${emrNo}`);
              if (card) {
                card.classList.toggle('fall-alert', patient.fall_detected);
              }
              if (patient.heart_rate) {
                updateChart(emrNo, patient.heart_rate);
              }
            }
          }
        })
        .catch(err => console.error('Update error:', err));
    }

    // ========================================
    // HELPER FUNCTIONS
    // ========================================
    function formatTime(timestamp) {
      if (!timestamp) return '-';
      const date = new Date(timestamp);
      return date.toLocaleTimeString('id-ID', { 
        hour: '2-digit', 
        minute: '2-digit',
        second: '2-digit'
      });
    }

    function formatDate(dateStr) {
      if (!dateStr) return '-';
      const date = new Date(dateStr);
      return date.toLocaleDateString('id-ID', { 
        day: 'numeric',
        month: 'long',
        year: 'numeric'
      });
    }

    // ========================================
    // AUDIO UNLOCK & INITIALIZATION
    // ========================================
    function unlockAudio() {
      if (audioUnlocked) return;
      initAudio();
      if (audioContext) {
        audioContext.resume().then(() => {
          audioUnlocked = true;
          console.log('‚úì Audio unlocked');
        });
      }
    }

    ['click', 'keydown', 'touchstart'].forEach(event => {
      document.addEventListener(event, unlockAudio, { once: true });
    });

    // ========================================
    // PAGE INITIALIZATION
    // ========================================
    document.addEventListener('DOMContentLoaded', function() {
      console.log('‚úì Monitoring dashboard initialized');

      if ("Notification" in window && Notification.permission === "default") {
        Notification.requestPermission();
      }

      initAudio();
      loadPatientData();

      // Refresh setiap 30 detik
      setInterval(loadPatientData, 30000);
    });

    window.addEventListener('beforeunload', () => {
      stopSound();
      if (audioContext) audioContext.close();
    });
  </script>
