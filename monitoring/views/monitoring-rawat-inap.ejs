<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Darsinurse - Monitoring Rawat Inap</title>
  <link rel="icon" type="image/png" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='0.9em' font-size='90'>üìä</text></svg>">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>

  <style>
    :root {
      --primary-green: #00B14F;
      --secondary-green: #008a3d;
      --primary-blue: #0056b3;
      --primary-dark: #003d7a;
      --secondary-teal: #20c997;
      --light-bg: #f0f8f7;
      --dark-text: #1a3a3a;
      --gray-border: #e0e0e0;
      --danger-red: #dc3545;
      --warning-orange: #ff9800;
      --success-green: #28a745;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html, body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: var(--dark-text);
      background: linear-gradient(135deg, #f5f5f5 0%, #e8f5e9 100%);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    /* ============== HEADER ============== */
    .top-header {
      background: white;
      padding: 1rem 0;
      box-shadow: 0 4px 15px rgba(0,0,0,0.1);
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 1000;
    }

    .header-content {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 2rem;
    }

    .logo-section {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .logo-section i {
      font-size: 28px;
      color: var(--primary-green);
    }

    .logo-section h1 {
      font-size: 22px;
      font-weight: 700;
      color: var(--dark-text);
      margin: 0;
    }

    .nav-section {
      display: flex;
      align-items: center;
      gap: 20px;
      font-size: 14px;
    }

    .nav-section a {
      color: var(--primary-blue);
      text-decoration: none;
      font-weight: 600;
      transition: all 0.3s;
    }

    .nav-section a:hover {
      color: var(--primary-dark);
    }

    .logout-btn {
      color: var(--danger-red) !important;
    }

    /* ============== MAIN CONTAINER ============== */
    .main-container {
      padding-top: 80px;
      padding: 2rem;
      flex: 1;
      max-width: 1600px;
      margin: 0 auto;
      width: 100%;
    }

    .page-title {
      font-size: 32px;
      font-weight: 700;
      color: var(--dark-text);
      margin-bottom: 8px;
    }

    .page-subtitle {
      font-size: 16px;
      color: #666;
      margin-bottom: 30px;
    }

    /* ============== STATS GRID ============== */
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }

    .stat-card {
      background: white;
      border-radius: 12px;
      padding: 20px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.08);
      transition: all 0.3s;
      border-top: 5px solid var(--primary-green);
    }

    .stat-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 25px rgba(0,0,0,0.12);
    }

    .stat-card.danger {
      border-top-color: var(--danger-red);
    }

    .stat-label {
      font-size: 12px;
      color: #999;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: 8px;
      font-weight: 600;
    }

    .stat-number {
      font-size: 36px;
      font-weight: 700;
      color: var(--primary-green);
      margin-bottom: 4px;
    }

    .stat-card.danger .stat-number {
      color: var(--danger-red);
    }

    .stat-icon {
      float: right;
      font-size: 32px;
      color: rgba(0, 177, 79, 0.2);
    }

    .stat-card.danger .stat-icon {
      color: rgba(220, 53, 69, 0.2);
    }

    /* ============== PATIENT GRID ============== */
    .patients-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(500px, 1fr));
      gap: 25px;
      margin-bottom: 40px;
    }

    .patient-card {
      background: white;
      border-radius: 15px;
      padding: 25px;
      box-shadow: 0 4px 20px rgba(0,0,0,0.08);
      border-left: 6px solid var(--primary-green);
      transition: all 0.3s;
    }

    .patient-card.fall-alert {
      border-left-color: var(--danger-red);
      background: linear-gradient(135deg, #fff5f5 0%, #ffe6e6 100%);
      box-shadow: 0 4px 25px rgba(220, 53, 69, 0.2);
      animation: fallPulse 1.5s ease-in-out infinite;
    }

    @keyframes fallPulse {
      0%, 100% { transform: scale(1); }
      50% { transform: scale(1.02); }
    }

    .patient-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 30px rgba(0,0,0,0.15);
    }

    .patient-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 20px;
      padding-bottom: 15px;
      border-bottom: 2px solid var(--gray-border);
    }

    .patient-name {
      font-size: 20px;
      font-weight: 700;
      color: var(--dark-text);
      margin-bottom: 8px;
    }

    .patient-meta {
      font-size: 13px;
      color: #666;
      display: flex;
      flex-direction: column;
      gap: 5px;
    }

    .meta-item {
      display: flex;
      gap: 8px;
    }

    .meta-label {
      font-weight: 600;
      color: #999;
      min-width: 80px;
    }

    .fall-badge {
      display: inline-block;
      background: linear-gradient(135deg, #ff6b6b, #ee5a52);
      color: white;
      padding: 8px 15px;
      border-radius: 20px;
      font-size: 12px;
      font-weight: 700;
      animation: badgePulse 1s ease-in-out infinite;
    }

    @keyframes badgePulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.7; }
    }

    /* ============== VITALS GRID ============== */
    .vitals-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 12px;
      margin-bottom: 20px;
    }

    .vital-box {
      background: linear-gradient(135deg, #f0f8f7 0%, #e8f5e9 100%);
      padding: 15px;
      border-radius: 10px;
      border-left: 4px solid var(--primary-green);
      transition: all 0.3s;
    }

    .vital-box.warning {
      background: linear-gradient(135deg, #fff8f0 0%, #ffe8d1 100%);
      border-left-color: var(--warning-orange);
    }

    .vital-box.danger {
      background: linear-gradient(135deg, #fff5f5 0%, #ffe6e6 100%);
      border-left-color: var(--danger-red);
    }

    .vital-label {
      font-size: 11px;
      color: #999;
      text-transform: uppercase;
      font-weight: 700;
      letter-spacing: 0.5px;
      margin-bottom: 6px;
    }

    .vital-value {
      font-size: 24px;
      font-weight: 700;
      color: var(--dark-text);
      display: flex;
      align-items: baseline;
      gap: 6px;
    }

    .vital-unit {
      font-size: 12px;
      color: #999;
      font-weight: 600;
    }

    .vital-time {
      font-size: 11px;
      color: #bbb;
      margin-top: 4px;
    }

    /* ============== CHART CONTAINER ============== */
    .chart-container {
      background: white;
      border-radius: 12px;
      padding: 20px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.08);
      margin-bottom: 20px;
      position: relative;
      height: 300px;
    }

    .chart-title {
      font-size: 14px;
      font-weight: 700;
      color: var(--dark-text);
      margin-bottom: 15px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .chart-wrapper {
      position: relative;
      height: 250px;
    }

    /* ============== STAFF INFO ============== */
    .staff-info {
      background: #f9f9f9;
      padding: 15px;
      border-radius: 8px;
      font-size: 13px;
      margin-top: 15px;
    }

    .staff-item {
      display: flex;
      justify-content: space-between;
      margin-bottom: 8px;
      padding-bottom: 8px;
      border-bottom: 1px solid var(--gray-border);
    }

    .staff-item:last-child {
      margin-bottom: 0;
      border-bottom: none;
    }

    .staff-label {
      font-weight: 600;
      color: #999;
    }

    .staff-value {
      color: var(--dark-text);
      font-weight: 500;
    }

    /* ============== FALL ALERT CONTAINER ============== */
    .fall-alert-container {
      position: fixed;
      top: 80px;
      right: 20px;
      z-index: 9999;
      max-width: 420px;
      width: 100%;
    }

    .fall-alert {
      background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
      border: 3px solid #ff0000;
      border-radius: 15px;
      padding: 20px;
      margin-bottom: 15px;
      box-shadow: 0 10px 40px rgba(255, 0, 0, 0.4);
      animation: slideInShake 0.6s ease-out;
      color: white;
    }

    @keyframes slideInShake {
      0% { transform: translateX(450px); opacity: 0; }
      50% { transform: translateX(-20px); }
      75% { transform: translateX(10px); }
      100% { transform: translateX(0); opacity: 1; }
    }

    @keyframes slideOut {
      from { transform: translateX(0); opacity: 1; }
      to { transform: translateX(450px); opacity: 0; }
    }

    .fall-alert.closing {
      animation: slideOut 0.3s ease-in;
    }

    .fall-alert-header {
      display: flex;
      align-items: center;
      gap: 12px;
      margin-bottom: 15px;
      padding-bottom: 15px;
      border-bottom: 2px solid rgba(255, 255, 255, 0.3);
    }

    .fall-alert-icon {
      font-size: 40px;
      animation: iconPulse 0.8s ease-in-out infinite;
    }

    @keyframes iconPulse {
      0%, 100% { transform: scale(1); }
      50% { transform: scale(1.15); }
    }

    .fall-alert-title {
      font-size: 22px;
      font-weight: 700;
      margin: 0;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    .fall-alert-body {
      margin-bottom: 15px;
      font-size: 14px;
    }

    .alert-info-row {
      display: flex;
      justify-content: space-between;
      margin-bottom: 8px;
      padding: 8px;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 6px;
    }

    .alert-label {
      font-weight: 600;
      opacity: 0.9;
    }

    .alert-value {
      font-weight: 700;
    }

    .fall-alert-footer {
      display: flex;
      gap: 10px;
    }

    .fall-btn {
      flex: 1;
      padding: 12px;
      border: none;
      border-radius: 8px;
      font-weight: 700;
      cursor: pointer;
      transition: all 0.3s;
      font-size: 14px;
    }

    .btn-acknowledge {
      background: white;
      color: #ff6b6b;
    }

    .btn-acknowledge:hover {
      background: #f0f0f0;
      transform: translateY(-2px);
    }

    .btn-close {
      background: rgba(255, 255, 255, 0.2);
      color: white;
      border: 1px solid rgba(255, 255, 255, 0.4);
    }

    .btn-close:hover {
      background: rgba(255, 255, 255, 0.3);
    }

    /* ============== EMPTY STATE ============== */
    .empty-state {
      text-align: center;
      padding: 60px 20px;
      color: #999;
    }

    .empty-state i {
      font-size: 64px;
      margin-bottom: 20px;
      color: #ddd;
    }

    /* ============== LOADING ============== */
    .loading-spinner {
      text-align: center;
      padding: 40px 20px;
    }

    .spinner {
      display: inline-block;
      width: 40px;
      height: 40px;
      border: 4px solid rgba(0, 177, 79, 0.2);
      border-top-color: var(--primary-green);
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    /* ============== FOOTER ============== */
    .footer {
      background: #2c3e50;
      color: white;
      padding: 20px 0;
      text-align: center;
      margin-top: auto;
    }

    /* ============== RESPONSIVE ============== */
    @media (max-width: 768px) {
      .main-container {
        padding: 1rem;
      }

      .page-title {
        font-size: 24px;
      }

      .patients-grid {
        grid-template-columns: 1fr;
      }

      .vitals-grid {
        grid-template-columns: 1fr;
      }

      .fall-alert-container {
        right: 10px;
        left: 10px;
        max-width: none;
      }

      .fall-alert {
        padding: 15px;
      }

      .header-content {
        padding: 0 1rem;
      }

      .stats-grid {
        grid-template-columns: 1fr 1fr;
      }
    }

    @media (max-width: 480px) {
      .header-content {
        flex-direction: column;
        gap: 12px;
      }

      .logo-section h1 {
        font-size: 18px;
      }

      .nav-section {
        font-size: 12px;
        gap: 10px;
      }

      .page-title {
        font-size: 20px;
      }

      .stats-grid {
        grid-template-columns: 1fr;
      }

      .stat-number {
        font-size: 28px;
      }

      .patient-name {
        font-size: 16px;
      }

      .vital-value {
        font-size: 20px;
      }
    }
  </style>
</head>
